{
  "name": "express-starter",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/rockysantiago/express-starter.git",
  "author": "Rocky Santiago <raphael.santiago@icloud.com>",
  "license": "MIT",
  "scripts": {
    "dev": "backpack",
    "build": "backpack build",
    "serve": "node ./build/main.js"
  },
  "dependencies": {
    "backpack-core": "^0.8.4",
    "dotenv": "^8.0.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
